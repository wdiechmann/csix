<%- model_class = Jobber -%>
<div class="page-header">
  <h1><%=t '.title', :default => Jobber %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:first_job_at) %></dt>
      <dd><pre class="prettyprint"><%= @jobber.first_job_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:last_job_at) %></dt>
      <dd><pre class="prettyprint"><%= @jobber.last_job_at %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              jobbers_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_jobber_path(@jobber), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              jobber_path(@jobber),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

