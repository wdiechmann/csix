<%- model_class = Jobber -%>
<div class="page-header">
  <h1><%=t '.title', :default => Jobber %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:first_job_at) %></th>
      <th><%= model_class.human_attribute_name(:last_job_at) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @jobbers.each do |jobber| %>
      <tr>
        <td><%= jobber.id %></td>
        <td><%= jobber.first_job_at %></td>
        <td><%= jobber.last_job_at %></td>
        <td><%=l jobber.created_at, format: :long %></td>
        <td>
          <%= link_to jobber_path(jobber), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to jobber_path(jobber), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_jobber_path,
            :class => 'btn btn-primary' %>
